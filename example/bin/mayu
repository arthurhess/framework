#!/usr/bin/env ruby

root = File.dirname(__FILE__)
$LOAD_PATH.unshift(File.join(root, "..", "..", "lib"))

case ARGV.first
when "dev"
  exec("bundle", "exec", "falcon", "serve", "--threaded", "--count", "2")
when "prod"
  exec("bundle", "exec", "falcon", "host")
else
  $stder.puts "Unknown command: #{ARGV.first}"
  exit 1
end
