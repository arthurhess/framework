def render
  classname = [
    styles[:checkbox],
    props[:class],
  ].compact.join(" ")

  group_classname = [
    styles.group,
    props[:group_class],
  ].compact.join(" ")

  id = "checkbox-#{vnode_id}"

  h.div class: group_classname do
    h.input(type: "checkbox", class: classname, placeholder: props[:label], **props, id: id)
    h.label props[:label], class: styles[:label], for: id
  end
end
