:css
  .card {
    background: var(--card-background, var(--bright));
    border: 1px solid var(--card-border, #0002);
    box-shadow: rgb(0 0 0 / 24%) 0px 3px 8px;
    border-radius: 2px;
    display: grid;
  }
.card{
  class: props[:class],
  style: {
    :"--card-background" => props[:background] || "var(--bright)",
    :"--card-border" => props[:border] || "#0002",
  }
}
  %slot
