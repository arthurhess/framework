:css
  .li {
    display: block;
  }

  .a {
    padding: .5em;
    display: block;
  }

  .a:link,
  .a:visited {
    color: var(--blue);
    text-decoration: none;
  }

  .a:active,
  .a:hover {
    text-decoration: underline;
    color: #fff;
    background: var(--blue);
  }

%li.li
  %a.a{href: props[:href]}
    %slot
