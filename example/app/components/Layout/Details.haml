:ruby
  Card = require("/app/components/Layout/Card")

  def self.get_initial_state(initial_open: false, lazy: true, **)
    {
      open: initial_open,
      loaded: initial_open || !lazy
    }
  end

  def handle_toggle(e)
    if e.dig("target", "open")
      update(loaded: true)
    end
  end

