:ruby
  MaxWidth = import("./MaxWidth")
:css
  .layout {
    height: 100%;
    overflow: hidden;
    position: relative;
  }

  .menu {
    background: var(--blue-bright);
    color: var(--dark);
    --menu-direction: row;
  }

  .scroll {
    padding: 1em;
  }

  .page {
    padding: 1em 0;
  }

  /* 46em * 2 - 14em - 2em = 76em */
  @media (min-width: 76em) {
    .layout {
      grid-template-columns: 15em auto;
      grid-template-rows: auto;
    }

    .scroll {
      position: absolute;
      inset: 0;
      max-height: 100%;
      overflow-y: auto;
    }

    .menu {
      --menu-direction: column;
      position: absolute;
      top: 0;
      left: 0;
      width: var(--menu-width);
      height: 100%;
    }
  }

.layout
  %nav.menu
    .scroll
      %slot(name="menu")
  %MaxWidth#page.page
    %slot
