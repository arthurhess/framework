:ruby
  MaxWidth = import("./MaxWidth")
:css
  .layout {
    height: 100%;
    overflow: hidden;
    position: relative;
  }

  .menu {
    background: var(--blue-bright);
    color: var(--dark);
    --menu-direction: row;
  }

  .scroll {
    padding: 1em;
  }

  .page {
    padding: 1em 0;
  }

  /* 46em + 14em + 4em = 64em */
  @media (min-width: 64em) {
    .layout {
      display: grid;
      grid-template-columns: min-content auto;
    }

    .scroll {
      position: absolute;
      inset: 0;
      max-height: 100%;
      overflow-y: auto;
    }

    .menu {
      --menu-direction: column;
      width: var(--menu-width);
      position: relative;
      height: 100%;
    }
  }
.layout
  %nav.menu
    .scroll
      %slot(name="menu")
  %MaxWidth#page.page
    %slot
