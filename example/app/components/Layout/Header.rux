MaxWidth = require("/app/components/Layout/MaxWidth")
Logo = image("./logo.png")

def render
  <header class={props[:class]}>
    <MaxWidth class={styles.inner}>
      <a href="/">
        <img
          src={Logo.src}
          sizes={Logo.sizes}
          srcset={Logo.srcset}
          width={Logo.original.width}
          height={Logo.original.height}
          class={styles.img}
          alt="Mayu Live"
        />
      </a>
      <nav class={styles[:nav]}>
        <menu class={styles[:menu]}>
          <li>
            <a class={styles[:navLink]} href="/">Start page</a>
          </li>
          <li>
            <a class={styles[:navLink]} href="/demos">Demos</a>
          </li>
          <li>
            <a class={styles[:navLink]} href="/docs">Docs</a>
          </li>
        </menu>
      </nav>
    </MaxWidth>
  </header>
end
