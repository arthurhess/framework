:ruby
  Cell = import("./Cell")
:css
  .grid {
    user-select: none;
    touch-action: none;
    display: grid;
    margin: 1em;
    background: #000;
    grid-template-columns: repeat(var(--grid-size), minmax(0, 1fr));
    grid-auto-flow: row;
    border: 1px solid #000;
    border-left: none;
    border-top: none;
  }
.grid{style: { __grid_size: props[:size] }}
  = props[:grid].map.with_index do |alive, value|
    %Cell[value]{
      ondraw: props[:ondraw],
      value:,
      alive:,
    }
