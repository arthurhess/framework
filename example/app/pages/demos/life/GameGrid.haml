:ruby
  Cell = import("./Cell")
:css
  .grid {
    user-select: none;
    display: grid;
    margin: 1em;
    background: #000;
    grid-template-columns: repeat(var(--grid-size), minmax(0, 1fr));
    grid-auto-flow: row;
    border: 1px solid #000;
    border-left: none;
    border-top: none;
  }
.grid{style: { "--grid-size": props[:size].to_s }}
  = props[:grid].map.with_index do |alive, value|
    %Cell(key=value){
      ondraw: props[:ondraw],
      value:,
      alive:,
    }
