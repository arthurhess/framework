:ruby
  require "fuzzy_match"

  Heading = import("/app/components/Layout/Heading")
  Fieldset = import("/app/components/Form/Fieldset")
  Input = import("/app/components/Form/Input")
  Suggestions = import("./Suggestions")

  FUZZY_MATCHER = FuzzyMatch.new(%w[
    Accordion
    Bamboo\ Flute
    Bass\ Guitar
    Bongos
    Crystal\ Glasses
    Drums
    Harmonica
    Harp
    Kazoo
    Keyboard
    Organ
    Piccolo
    Saxophone
    Shakers
    Slide\ Whistle
    Snare\ Drum
    Spoons
    Steel\ Drums
    Steel\ Pan
    Tambourine
    Triangle
    Trombone
    Trumpet
    Tuba
    Ukulele
    Vibraphone
    Viola
    Violin
    Vocals
    Wooden Flute
    Xylophone
    Zither
  ])

  def self.get_initial_state(**) = {
    value: "",
    suggestions: []
  }

  def handle_change(e)
    e => { target: { value: } }

    update(
      value:,
      suggestions: FUZZY_MATCHER.find_all(value)
    )
  end

:css

%article
  %Heading(level=2) Fuzzy-matcher example
  %Fieldset
    %legend Search instrument

    %Input(label="Name" oninput=handle_change onchange=handle_change autocomplete="off")
    %Suggestions{suggestions: state[:suggestions]}
