:ruby
  Icon = import("/app/components/UI/Icon")
  Name = import("./Name")

  def icon
    case File.extname(props[:path])
    in ".haml" | ".css" | ".rb"
      "file-code"
    in ".md"
      "file-lines"
    in ".png" | ".jpg" | ".jpeg" | ".svg"
      "file-image"
    else
      "file"
    end
  end

:css
  h4 {
    display: inline-flex;
    align-items: center;
    gap: .5em;
  }

:ruby
  props => path:
  href = "?file=#{path}"

%Name(icon=icon)
  %a(href=href)= File.basename(path)
