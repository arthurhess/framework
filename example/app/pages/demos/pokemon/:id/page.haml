  def self.get_initial_state(props) = {
    result: nil,
    error: nil,
  }

  def mount
    props => { request: { params: { id: Integer => id } } }
    res = helpers.fetch("https://pokeapi.co/api/v2/pokemon/#{id}/")
    result = res.json(symbolize_names: true)
    update(result:)
  rescue => e
    update(error: e.message)
  end

