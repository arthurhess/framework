initial_state do |props|
  { time: Time.now.strftime('%H:%M:%S') }
end

mount do
  puts "Mounting clock"

  loop do
    puts "Updating clock"
    update(time: Time.now.strftime('%H:%M:%S'))

    sleep 1
  end
ensure
  puts "Unmounting clock"
end

render do
  <span class={styles.clock}>
    {state[:time]}
  </span>
end
